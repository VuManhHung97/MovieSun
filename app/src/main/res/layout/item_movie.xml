<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textViewTest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imageViewAllSong"
        android:layout_width="96dp"
        android:layout_height="141dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/textTitleAllSong"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textTitleAllSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAllSong"
        app:layout_constraintStart_toStartOf="@+id/imageViewAllSong"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAllSong"
        />
    <RatingBar
        android:id="@+id/ratingBarMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:numStars="5"
        app:layout_constraintEnd_toStartOf="@+id/textVoteAverage"
        app:layout_constraintStart_toStartOf="@+id/imageViewAllSong"
        app:layout_constraintTop_toBottomOf="@id/textTitleAllSong"
        style="@style/Widget.AppCompat.RatingBar.Small"
        />
    <TextView
        android:id="@+id/textVoteAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EBD61E"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAllSong"
        app:layout_constraintTop_toBottomOf="@+id/textTitleAllSong"
        />

</android.support.constraint.ConstraintLayout>