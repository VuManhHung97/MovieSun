<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePosterTrailers"
        android:layout_width="166dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageYoutube"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_youtube"
        app:layout_constraintBottom_toBottomOf="@+id/imagePosterTrailers"
        app:layout_constraintEnd_toEndOf="@+id/imagePosterTrailers"
        app:layout_constraintStart_toStartOf="@+id/imagePosterTrailers"
        app:layout_constraintTop_toTopOf="@+id/imagePosterTrailers" />

</android.support.constraint.ConstraintLayout>