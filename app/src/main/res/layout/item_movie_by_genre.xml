<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >
    <ImageView
        android:id="@+id/imageBackdropPath"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/imagePosterPath"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/imageBackdropPath"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagePosterPath"
        app:layout_constraintTop_toTopOf="@+id/imagePosterPath"
        />
    <RatingBar
        android:id="@+id/ratingBarMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:numStars="5"
        app:layout_constraintEnd_toStartOf="@+id/textVoteAverage"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toEndOf="@+id/imagePosterPath"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        style="@style/Widget.AppCompat.RatingBar.Small"
        />
    <TextView
        android:id="@+id/textVoteAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="124dp"
        android:layout_marginTop="16dp"
        android:textColor="#F1D905"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBarMovie"
        app:layout_constraintEnd_toEndOf="@+id/imageBackdropPath"
        app:layout_constraintTop_toTopOf="@+id/ratingBarMovie"
        app:layout_constraintVertical_bias="1.0"
        />
    <TextView
        android:id="@+id/textReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imagePosterPath"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarMovie"
        />
</android.support.constraint.ConstraintLayout>